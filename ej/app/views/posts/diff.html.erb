<h2>Differences Between First and Final Drafts</h2>

<div class="row">
  <div class="col-md-6 well well-lg">
    <h3>Deletions</h3>
    <%= Diffy::SplitDiff.new(@post.drafts.first.content, @post.drafts.last.content, :format => :html, :include_plus_and_minus_in_html => true).left.html_safe %>
  </div>
  <div class="col-md-6 well well-lg">
    <h3>Insertions</h3>
    <%= Diffy::SplitDiff.new(@post.drafts.first.content, @post.drafts.last.content, :format => :html, :include_plus_and_minus_in_html => true).right.html_safe %>
  </div>
</div>
<center><button class="btn btn-warning" onclick="window.print()">Print</button></center>
