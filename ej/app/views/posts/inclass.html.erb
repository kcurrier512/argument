<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading"><h1 align="center">Bookmarked Posts</h1></div>
<table class="table" align="center">
  <tbody>
    <% @posts.each do |post| %>
      <% if post.submitted %>
          <tr>
            <td>
              <h4><b><u><%= 'Headline:'%></u></b> <%= post.headline %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<b><u><%= 'Author:'%></b></u> <%= post.user.nickname %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<b><u><%= 'Position:'%></b></u> <% if post.position.nil? %>
            No position for this assignment
            <% else %>
            <%= post.position.title %>
            <% end %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= link_to 'Go to Post', post, class:'btn btn-default btn-sm' %></h4>
              <h4>First Draft</h4>
              <div class="well well-lg">
                  <%= post.draft1.html_safe %>
              </div>

              <% if post.draft2 != nil && post.draft2.length > 0 %>
                <h4>Final Draft</h4>
                <div class="well well-lg">
                    <%= post.draft2.html_safe %>
                </div>
              <% end %>
            </td>
          </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<div class="panel-footer"></div>

</div>